html
    style
        include ../public/css/index.css
    body
        a(href="/") Home
        hr
        br
        h1 Success! - Hosted Authentication (#{requestType})
        br
        h2 /oauth/authorize response
        table
            tr
                th Code
                th State 
            tr
                td 
                    code #{code}
                td 
                    code #{state}
        br
        h2 /oauth/token response
        table
            tr
                th access_token 
                th account_id 
                th email_address 
                th provider 
                th token_type 
            tr 
                td 
                    code #{access_token}
                td 
                    code #{account_id}
                td 
                    code #{email_address}
                td 
                    code #{provider}
                td 
                    code #{token_type}